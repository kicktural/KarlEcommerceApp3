@section Scripts {
    <script>
        function AddToCart(id) {
        
            let cart = {
                id: id,
                quantity: 1
            }
    
            $.ajax({
                type: 'POST',
                url: `/Cart/AddToCart?id=${cart.id}&quantity=${cart.quantity}`,
                contentType: "application/json",
                data: cart,
                success: function (e) {
                    Swal.fire({
                        position: "center",
                        icon: "success",
                        title: "Successfully Added!",
                        showConfirmButton: false,
                        timer: 1500
                    });
                },
                error: function () {
                    Swal.fire({
                        position: "center",
                        icon: "error",
                        title: "Product not added",
                        showConfirmButton: false,
                        timer: 1500
                    });
                }
            })
        }
    </script>
}































