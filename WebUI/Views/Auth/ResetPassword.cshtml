
@model ResetPasswordViewModel

@{
	Layout = "_AuthLayout";
}


@section Scripts {

	@await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="loader-wrapper"><div class="lds-ring"><div></div><div></div><div></div><div></div></div></div>
<div class="card card-authentication1 mx-auto my-5">
	<div class="card-body">
		<div class="card-content p-2">
			<div class="text-center">
				<img src="~/Auth/images/logo-icon.png" alt="logo icon">
			</div>
			<div class="card-title text-uppercase text-center py-3">Update Password</div>
			@if (TempData["SuccessMessage"] != null)
			{
				<div class="alert alert-success" role="alert">
					@TempData["SuccessMessage"]
				</div>
			}
			<form method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				
				<div class="form-group">
					<label for="exampleInputPassword" class="sr-only">Password</label>
					<div class="position-relative has-icon-right">
						<input type="password" asp-for="Password" id="exampleInputPassword" class="form-control input-shadow" placeholder="Enter Password">
						<span asp-validation-for="Password" class="text-danger"></span>
						<div class="form-control-position">
							<i class="icon-lock"></i>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="exampleInputPassword" class="sr-only">PasswordConfirm</label>
					<div class="position-relative has-icon-right">
						<input type="password" asp-for="PasswordConfirm" id="exampleInputPassword" class="form-control input-shadow" placeholder="Enter Password">
						<span asp-validation-for="PasswordConfirm" class="text-danger"></span>
						<div class="form-control-position">
							<i class="icon-lock"></i>
						</div>
					</div>
				</div>
				<button type="submit" class="btn btn-light btn-block">Update Password</button>
				<div class="text-center mt-3">Sign In With</div>

			</form>
		</div>
	</div>
	<div class="card-footer text-center py-3">
		<p class="text-warning mb-0">Do not have an account? <a href="/Auth/Login"> Sign Up here</a></p>
	</div>
</div>
