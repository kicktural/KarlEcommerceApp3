@model ForgetPasswordViewModel


@{
    Layout = "_AuthLayout";
}

@section Scripts 
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


<div class="loader-wrapper"><div class="lds-ring"><div></div><div></div><div></div><div></div></div></div>
<div class="card card-authentication1 mx-auto my-5">

    @if (TempData["success"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["success"]
        </div>
    }
	<div class="card-body">
		<div class="card-content p-2">
			<div class="text-center">
				<img src="~/Auth/images/logo-icon.png" alt="logo icon">
			</div>
			<div class="card-title text-uppercase text-center py-3">Sign In</div>
			<form method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label for="exampleInputUsername" class="sr-only">Email</label>
					<div class="position-relative has-icon-right">
						<input type="email" asp-for="Email" id="exampleInputUsername" class="form-control input-shadow" placeholder="Enter Email">
						<span asp-validation-for="Email" class="text-danger"></span>
						<div class="form-control-position">
							<i class="icon-user"></i>
						</div>
					</div>
				</div>
				<button type="submit" class="btn btn-light btn-block">Submit</button>
				<div class="text-center mt-3">Sign In With</div>

			</form>
		</div>
	</div>
	<div class="card-footer text-center py-3">
		<p class="text-warning mb-0">Do not have an account? <a href="/Auth/Login">Back</a></p>
	</div>
</div>






