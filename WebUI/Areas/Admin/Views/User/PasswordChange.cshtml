@model PasswordChangeViewModel

@{
	Layout = "_AuthLayout";
}


@section Scripts {

	@await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="loader-wrapper"><div class="lds-ring"><div></div><div></div><div></div><div></div></div></div>
<div class="card card-authentication1 mx-auto my-5">
	<div class="card-body">
		<div class="card-content p-2">
			<div class="text-center">
				<img src="~/Auth/images/logo-icon.png" alt="logo icon">
			</div>
			<div class="card-title text-uppercase text-center py-3">Update Password</div>
			@if (TempData["SuccessMessage"] != null)
			{
				<div class="alert alert-success" role="alert">
					@TempData["SuccessMessage"]
				</div>
			}
			<form method="post" asp-controller="User" asp-action="PasswordChange">
				<div asp-validation-summary="All" class="text-danger"></div>

				<div class="form-group">
					<label for="exampleInputPassword" class="sr-only">PasswordOld</label>
					<div class="position-relative has-icon-right">
						<input type="password" asp-for="PasswordOld" id="exampleInputPassword" class="form-control input-shadow" placeholder="Enter Password Old">
						<span asp-validation-for="PasswordOld" class="text-danger"></span>
						<div class="form-control-position">
							<i class="icon-lock"></i>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="exampleInputPassword" class="sr-only">PasswordNew</label>
					<div class="position-relative has-icon-right">
						<input type="password" asp-for="PasswordNew" id="exampleInputPassword" class="form-control input-shadow" placeholder="Enter Password New">
						<span asp-validation-for="PasswordNew" class="text-danger"></span>
						<div class="form-control-position">
							<i class="icon-lock"></i>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="exampleInputPassword" class="sr-only">PasswordConfirm</label>
					<div class="position-relative has-icon-right">
						<input type="password" asp-for="PasswordNewConfirm" id="exampleInputPassword" class="form-control input-shadow" placeholder="Enter Password New Confirm">
						<span asp-validation-for="PasswordNewConfirm" class="text-danger"></span>
						<div class="form-control-position">
							<i class="icon-lock"></i>
						</div>
					</div>
				</div>
				<button type="submit" class="btn btn-light btn-block">Change Password</button>
				<div class="text-center mt-3">Sign In With</div>

			</form>
		</div>
	</div>
</div>
