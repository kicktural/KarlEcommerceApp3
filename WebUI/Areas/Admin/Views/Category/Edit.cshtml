@model CategoryAdminDetailDTO
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="PhotoUrl" />
    <input type="hidden" asp-for="CreatedDate" />
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item active" role="presentation">
            <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="false">AZ</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">RU</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">EN</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="form-group">
           @*      <input type="text" class="form-control"  name="CategoryName" placeholder="Category in AZ" /> *@
                <input type="text" class="form-control" value="@Model.CategoryName[0]" name="CategoryName" placeholder="Category in AZ" />
                <input type="hidden" value="az-AZ" name="LangCode" />
            </div>
        </div>
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <div class="form-group">
              @*   <input type="text" class="form-control"  name="CategoryName" placeholder="Category in RU" /> *@
                <input type="text" class="form-control" value="@Model.CategoryName[1]" name="CategoryName" placeholder="Category in RU" />
                <input type="hidden" value="ru-RU" name="LangCode" />
            </div>
        </div>
        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
            <div class="form-group">
            @*     <input type="text" class="form-control"  name="CategoryName" placeholder="Category in EN" /> *@
                <input type="text" class="form-control" value="@Model.CategoryName[2]" name="CategoryName" placeholder="Category in EN" />
                <input type="hidden" value="en-EN" name="LangCode" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="checkbox" asp-for="IsFeatured" id="featured"  />
        <label for="featured">Featured</label>
    </div>
    <div class="form-group">
        <input type="file" accept="image/*" name="Photo" class="form-control" />
    </div>
    <div class="form-group">
        <img src="@Model.PhotoUrl" width="200" alt="" />
    </div>
    <input type="submit" value="Update" class="btn btn-dark" />
</form>