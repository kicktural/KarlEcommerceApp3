@model List<RoleViewModel>



<div class="row">
    <div class="col-md-6 offset-md-2">
        <h2>Roller</h2>
    </div>
    <div class="col-md-2">
        <a asp-action="RoleCreate" asp-controller="Roles" asp-area="Admin" class="form-control btn btn-outline-info">Role ekle</a>
    </div>

</div>



<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-striped table table-dark">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Role Name</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-area="Admin" asp-controller="roles"
                               asp-action="RoleUpdate" asp-route-id="@item.Id">Role Update</a>

                            <a class="btn btn-danger btn-sm my-1" asp-area="Admin" asp-controller="roles"
                               asp-action="RoleDelete" asp-route-id="@item.Id">Role Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


