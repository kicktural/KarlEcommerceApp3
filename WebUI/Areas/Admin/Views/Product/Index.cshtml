@model List<ProductAdminListDTO>


<a href="/Admin/Product/Create" class="btn btn-primary m-1 form-control w-100"> <i class="fa-solid fa-user-plus"></i> Create</a>
<table class="table table-dark table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Product Name</th>
            <th>Category Name</th>
            <th>Price</th>
            <th>Discount</th>
            <th>Images</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ProductName</td>
                <td>@item.CategoryName</td>
                <td>@item.Price</td>
               @*  <td>@item.Email</td> *@
                <td>@item.Discount</td>
                <td>
                    <img src="@item.PhotoUrl" width="200" alt="" />
                </td>
                <td>
                    <a href="/admin/product/edit/@item.Id" class="btn btn-warning">Edit</a>
                    <form method="post" asp-action="Remove" asp-route-id="@item.Id">
                        <button type="submit" onclick="return confirm('Do you want to delete this Product?: @item.ProductName' )" class="btn btn-danger">Remove</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
