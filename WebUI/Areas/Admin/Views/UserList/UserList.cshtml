@model List<UserListViewModel>
<h1>UserList</h1>

<table class="table table-striped table table-dark">
    <thead>
        <tr>
            <th>Id</th>
            <th>UserName</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Role Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>                
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>
                    <user-role-names user-id="@item.Id"></user-role-names>
                </td>
                <td>
                    <a asp-controller="Roles" asp-action="AssignRoleToUser" asp-route-id="@item.Id">Set To Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>

